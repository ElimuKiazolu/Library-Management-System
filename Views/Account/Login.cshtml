@{
    ViewBag.Title = "Admin Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Login</h2>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="nameOrEmail">Name or Email</label>
                <input id="nameOrEmail" name="nameOrEmail" class="form-control" value="" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" name="password" type="password" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        }

        <hr />
        <p>
            No admin yet? <a href="@Url.Action("CreateAdmin", "Admin")">Create an admin account</a>.
        </p>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger">
                @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@err.ErrorMessage</div>
                }
            </div>
        }
    </div>
</div>
