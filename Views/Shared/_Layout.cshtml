@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - MiniLibrary</title>
    <meta name="viewport" content="width=device-width" />

    <!-- main css -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" />
    <link href="~/Content/admin.css" rel="stylesheet" />

    @* Optional: page-specific CSS injection (not required) *@
    @RenderSection("styles", required: false)

    <style>
        body {
            padding-top: 70px;
        }

        .book-row td {
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">MiniLibrary</a>
            </div>

            <ul class="nav navbar-nav navbar-right">
                @if (Session["AdminId"] == null)
                {
                    <li><a href="@Url.Action("Login","Account")">Admin Login</a></li>
                }
                else
                {
                    <li><a href="@Url.Action("Index","Admin")">Dashboard</a></li>
                    <li><a href="@Url.Action("Logout","Account")">Logout (@Session["AdminName"])</a></li>
                }
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <!-- default scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js"></script>

    @* Optional: allow pages to add extra scripts (no error if none) *@
    @RenderSection("scripts", required: false)
</body>
</html>
