@model IEnumerable<MiniLibrary.Models.Book>

@{
    ViewBag.Title = "Admin - Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Admin — Books</h2>
        <div>
            <a href="@Url.Action("CreateAdmin","Admin")" class="btn btn-outline-primary">Create Admin</a>
            <a href="@Url.Action("Logout","Account")" class="btn btn-secondary">Logout</a>
        </div>
    </div>

    <div class="card p-3 mb-4">
        <h4>Add a Book</h4>
        @using (Html.BeginForm("AddBook", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="row g-2">
                <div class="col-md-4">
                    <input name="Title" class="form-control" placeholder="Title" required />
                </div>
                <div class="col-md-3">
                    <input name="Author" class="form-control" placeholder="Author" required />
                </div>
                <div class="col-md-2">
                    <input name="Year" type="number" class="form-control" placeholder="Year" />
                </div>
                <div class="col-md-3">
                    <input name="Genre" class="form-control" placeholder="Genre" />
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success">Add Book</button>
            </div>
        }
    </div>

    <div class="card p-3">
        <h4>All Books</h4>

        @if (Model == null || !Model.Any())
        {
            <p class="text-muted">No books available</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Year</th>
                        <th>Genre</th>
                        <th>Added</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@Html.Encode(book.Title)</td>
                            <td>@Html.Encode(book.Author)</td>
                            <td>@(book.Year?.ToString() ?? "-")</td>
                            <td>@Html.Encode(book.Genre)</td>
                            <td>@book.CreatedAt.ToShortDateString()</td>
                            <td>
                                @using (Html.BeginForm("DeleteBook", "Admin", FormMethod.Post, new { style = "display:inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", book.Id)
                                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
